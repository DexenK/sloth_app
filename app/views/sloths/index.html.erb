<p id="notice"><%= notice %></p>

<h1>Sloths</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Paws</th>
      <th>Fluffiness</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sloths.each do |sloth| %>
      <tr>
        <td><%= sloth.color %></td>
        <td><%= sloth.paws %></td>
        <td><%= sloth.fluffiness %></td>
        <td><%= link_to 'Show', sloth %></td>
        <td><%= link_to 'Edit', edit_sloth_path(sloth) %></td>
        <td><%= link_to 'Destroy', sloth, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sloth', new_sloth_path %>
